apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: argocd-server-certificate
  namespace: {{ argocd_namespace }}
spec:
  secretName: {{ argocd_tls_secret_name }}
  issuerRef:
    name: {{ cert_manager_ca_issuer_name }}
    kind: ClusterIssuer
  # The DNS name and/or IP address you use to access ArgoCD.
  # At least one of these MUST be set in your inventory.
  {% if argocd_hostname is defined and argocd_hostname %}
  dnsNames:
    - {{ argocd_hostname }}
  {% endif %}
  {% if argocd_ip_address is defined and argocd_ip_address %}
  ipAddresses:
    - {{ argocd_ip_address }}
  {% endif %}
